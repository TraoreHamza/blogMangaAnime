<div{{attributes}} class="">
<label class="relative flex items-center mt-1 border-b rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 px-5 py-3 max-w-xl mx-auto">
    <input
        type="text"
        data-model="query"
        class="block w-full pl-12 pr-4 text-gray-700 placeholder-gray-500 bg-transparent focus:outline-none focus:ring-0 focus:placeholder-gray-300"
        placeholder="Recherche..."
        autocomplete="off"
        spellcheck="false"
    />
</label>


	<div class="mt-10">
		<h2 class="text-xl font-semibold mb-4">Articles</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
			{% set articles = this.results.articles %}
			{% if articles is not empty %}
				{% for item in articles %}
					<a href="{{ path('article', {'slug': item.slug}) }}" class="col-span-1 shadow bg-neutral-900 border-l-2 border-slate-400 rounded-md p-4 grid grid-rows-3 h-44 hover:shadow-xl transition duration-300 ease-in-out">
						<p class="row-span-1 flex items-center justify-center gap-2 text-sm hover:text-violet-950">
							<twig:ux:icon name="lucide:clock" class="w-3 h-3"/>
							Publi√© il y a
							{{ item.createdAt|time_diff }}
						</p>
						<h3 class="row-span-2">{{ item.title }}</h3>
					</a>
				{% endfor %}
			{% else %}
				<p>Aucun article correspondant.</p>
			{% endif %}
		</div>
		{# Mangas/Animes #}
		<h2 class="text-xl font-semibold mb-4">Mangas / Animes</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
			{% set mangas = this.results.mangas %}
			{% if mangas|length > 0 %}
				{% for item in mangas %}
					<a href="{{ path('mangaAnime_view', {'id': item.id}) }}" class="">
						<div class="bg-black rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition flex-shrink-0 w-64">
							<img src="{{ asset('medias/images/' ~ item.image) }}" alt="{{ item.title }}" class="w-full h-64 object-contain bg-gray-100">
							<div class="p-4 text-center">
								<h3 class="text-lg font-semibold mb-1">{{ item.title|upper }}</h3>
								<p class="text-gray-500 text-sm">{{ item.type|capitalize }}</p>
							</div>
						</div>
					</a>
				{% endfor %}
			{% else %}
				<p>Aucun manga ou anime correspondant</p>
			{% endif %}
		</div>
	</div>
