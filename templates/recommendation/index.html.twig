{% extends 'base.html.twig' %}

{% block title %}Recommandations - Accueil{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center p-6">
    <h1 class="text-4xl font-bold mb-8 text-gray-900">Générer vos recommandations</h1>

    <form method="post" action="{{ path('recommendation_generate') }}">
        <button type="submit"
                class="bg-cyan-600 hover:bg-cyan-700 text-white font-semibold rounded-full px-6 py-3 transition shadow-md flex items-center gap-2">
            {{ ux_icon('lucide:refresh-cw', { class: 'w-6 h-6' }) }}
            Générer mes recommandations
        </button>
    </form>
</div>
{% endblock %}
