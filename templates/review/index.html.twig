{% extends 'base.html.twig' %}

{% block title %}Liste des avis{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto mt-10 px-4">
    <h1 class="text-2xl font-bold mb-6">Tous les avis</h1>

    <a href="{{ path('review_new') }}" class="inline-block mb-6 px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">
        + Ajouter un avis
    </a>

    {% if reviews|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for review in reviews %}
                <div class="p-5 bg-neutral-900 border border-gray-700 rounded shadow hover:shadow-lg transition relative">
                    <h2 class="text-lg font-semibold mb-2">
                        {{ review.mangaAnimes.title ?? 'Anime inconnu' }}
                    </h2>
                    <p class="text-sm text-gray-400">
                        Note : <strong>{{ review.rating }}/5</strong>
                        <span class="ml-3">Par {{ review.user.email }}</span>
                    </p>
                    <p class="mt-3 text-gray-200">{{ review.content|e }}</p>
                    <div class="mt-4 flex flex-wrap gap-3 text-sm absolute bottom-1 right-4">
                        <a href="{{ path('review_view', { id: review.id }) }}" class="text-blue-500 hover:underline">Voir</a>

                        {% if app.user and (app.user == review.user or is_granted('ROLE_ADMIN')) %}
                            <a href="{{ path('review_edit', { id: review.id }) }}" class="text-green-500 hover:underline">Modifier</a>

                            <form method="post" action="{{ path('review_delete', { id: review.id }) }}" onsubmit="return confirm('Confirmer la suppression ?');" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                <button class="text-red-500 hover:text-red-600">Supprimer</button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-gray-400">Aucun avis pour lâ€™instant.</p>
    {% endif %}
</div>
{% endblock %}
